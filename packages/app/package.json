{
  "name": "app",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "next": "^14.2.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tippy.js": "^6.3.7",
    "use-query-params": "^2.2.1",
    "@rainbow-me/rainbowkit": "^2.2.4",
    "react-toastify": "^9.1.1"
  },
  "scripts": {
    "predev": "yarn workspace arb-token-bridge-ui generateDenylist",
    "dev": "next dev",
    "prebuild": "yarn workspace arb-token-bridge-ui generateDenylist",
    "build": "next build",
    "start": "next start",
    "lint": "tsc && eslint",
    "lint:fix": "tsc && eslint --quiet --fix",
    "css:bridge:build": "tailwindcss -c ./tailwind.config.js -i ./src/styles/bridge.css -o ./src/styles/bridge.css --minify",
    "css:bridge:watch": "tailwindcss -c ./tailwind.config.js -i ./src/styles/bridge.css -o ./src/styles/bridge.css --watch",
    "css:portal:build": "tailwindcss -c ./tailwind.portal.config.js -i ./src/styles/portal.css -o ./src/styles/portal.css --minify",
    "css:portal:watch": "tailwindcss -c ./tailwind.portal.config.js -i ./src/styles/portal.css -o ./src/styles/portal.css --watch",
    "css:build": "npm run css:bridge:build && npm run css:portal:build",
    "css:watch": "npm-run-all --parallel css:bridge:watch css:portal:watch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}

{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "eslint.config.mjs",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.cts",
    "packages/**/*.mts",
    "packages/**/*.js",
    "packages/**/*.jsx",
    "packages/**/*.d.ts"
  ],
  "exclude": ["node_modules", "**/.next", "**/dist", "**/packages/app/build"]
}
